---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: Inter, Roboto, Arial, sans-serif;
		background: #ffffff;
		color: #111827;
	}

	main {
		max-width: 900px;
		margin: auto;
		padding: 40px 20px;
	}

	/* ===== TABLAS MARKDOWN ===== */

	table {
		width: 100%;
		border-collapse: collapse;
		margin-top: 24px;
		font-size: 14px;
		background: white;
		border-radius: 10px;
		overflow: hidden;
		box-shadow: 0 2px 6px rgba(0,0,0,0.08);
	}

	th {
		background: #111827;
		color: white;
		padding: 10px;
		text-align: left;
		font-weight: 500;
	}

	td {
		padding: 10px;
		border-bottom: 1px solid #e5e7eb;
	}

	tr:hover {
		background: #f9fafb;
	}

	code {
		background: #f3f4f6;
		padding: 3px 6px;
		border-radius: 6px;
		font-size: 13px;
	}
</style>

